<footer class="{{footer.class}}">
  <div class="{{footer.copyright.class}}">{{footer.copyright.text}}</div>

  <ul class="{{footer.nav.class}}">
    {% for item in footer.nav.listItems %}
      <li class="{{ item.class }}"><a href="{{ item.url }}" title="{{ item.title }}">{{ item.shortTitle }}</a></li>
    {% endfor %}
  </ul>
  
</footer>